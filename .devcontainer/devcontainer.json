{
  "name": "Web App Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },

  "forwardPorts": [5173, 4173, 6080, 5900],
  "portsAttributes": {
    "5173": { "label": "Vite Dev Server", "onAutoForward": "notify" },
    "4173": { "label": "Vite Preview", "onAutoForward": "notify" },
    "6080": { "label": "noVNC (브라우저 GUI)", "onAutoForward": "openBrowser" },
    "5900": { "label": "VNC Direct", "onAutoForward": "ignore" }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb"
  },

  "containerEnv": {
    "DISPLAY": ":99",
    "VNC_PORT": "5900",
    "NOVNC_PORT": "6080",
    "SCREEN_WIDTH": "1280",
    "SCREEN_HEIGHT": "720",
    "SCREEN_DEPTH": "24"
  },

  "remoteEnv": {
    "TZ": "Asia/Seoul",
    "PATH": "${containerEnv:PATH}:/usr/local/share/nvm/current/bin",
    "GIT_CONFIG_COUNT": "2",
    "GIT_CONFIG_KEY_0": "pull.rebase",
    "GIT_CONFIG_VALUE_0": "true",
    "GIT_CONFIG_KEY_1": "init.defaultBranch",
    "GIT_CONFIG_VALUE_1": "main"
  },

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "vitest.explorer",
        "streetsidesoftware.code-spell-checker",
        "DavidAnson.vscode-markdownlint",
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "git.rebaseWhenSync": true,
        "git.autofetch": true,
        "git.autofetchPeriod": 120
      }
    }
  }
}
