{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server",
      "type": "npm",
      "script": "dev",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      },
      "group": "build"
    },
    {
      "label": "Build",
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Unit Test",
      "type": "npm",
      "script": "test",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Test (Watch)",
      "type": "npm",
      "script": "test:watch",
      "isBackground": true,
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Test (Coverage)",
      "type": "npm",
      "script": "test:coverage",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "test"
    },
    {
      "label": "Type Check",
      "type": "npm",
      "script": "typecheck",
      "problemMatcher": ["$tsc"],
      "group": "test"
    },
    {
      "label": "Format",
      "type": "npm",
      "script": "format",
      "problemMatcher": []
    },
    {
      "label": "Check All (CI)",
      "type": "npm",
      "script": "check-all",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "test"
    },
    {
      "label": "E2E Test",
      "type": "npm",
      "script": "e2e",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Preview (Production)",
      "type": "npm",
      "script": "preview",
      "isBackground": true,
      "problemMatcher": [],
      "dependsOn": "Build"
    }
  ]
}
